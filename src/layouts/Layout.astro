---
import Header from "./Header.astro";

const { title = "TP1 Dev" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<Header />
		<slot />
		<style>
			.h2 {
				text-align: center;
				margin-top: 2rem;
				margin-bottom: 1rem;
				color: #333;
			}
			.p{
				text-align: center;
				margin: 0 1rem 2rem 1rem;
				color: #555;
			}
		</style>
	</body>
</html>


